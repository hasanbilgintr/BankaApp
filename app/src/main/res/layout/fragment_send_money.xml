<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FEFEFE"
    android:orientation="vertical"
    tools:context=".Views.SendMoney.SendMoneyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:background="#FBB000"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/backsiyah"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:text="Para Gönder" />
        <View
            android:layout_width="wrap_content"
            android:layout_weight="100"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/homesiyah"
            android:layout_height="30dp"  />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="Hızlı Para Gönder"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/sendSpeedMoneyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="Transfer İşlemleri"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transferTransactionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
       />


</LinearLayout>