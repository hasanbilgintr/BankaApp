<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBB000"
    android:orientation="vertical"

    tools:context=".Views.BankStatement.BankStatementHome.BankStatementFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FBB000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/profilewhite" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="80" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/searchwhite" />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/menu_buton_normal"
                android:text="Cepte Kazan"
                android:textSize="9sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerBankStatement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="92"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.AppCompat.NoActionBar">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabBankStatement"
                android:layout_width="match_parent"
android:background="#BDD5E8"
                android:layout_height="0dp"
                android:layout_weight="8" />

            </com.google.android.material.appbar.AppBarLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>